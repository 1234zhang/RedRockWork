<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>myLogin</servlet-name>
        <servlet-class>WebWork.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>WebWork.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myschedule</servlet-name>
        <servlet-class>Schedule.Schedule</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myLogin</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myschedule</servlet-name>
        <url-pattern>/schedule.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>signup.jsp</welcome-file>
    </welcome-file-list>
</web-app>